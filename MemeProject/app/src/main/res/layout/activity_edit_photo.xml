<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="madelyntav.c4q.nyc.memeproject.EditPhoto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/vanilla"
            android:text="Vanilla"
            android:onClick="vanillaM"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Demotivational"
            android:id="@+id/demotivational"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Share"

            android:id="@+id/share"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/save"
            android:layout_weight="1"
            android:onClick="storeImage"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meme"
        android:layout_below="@+id/linearLayout"
        >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:id="@+id/mImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="226dp"
            android:text="New Text"
            android:layout_alignTop="@+id/mImageView"
            android:layout_centerHorizontal="true"
            android:id="@+id/editText" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="226dp"
            android:text="New Text"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/mImageView"
            android:id="@+id/editText2" />


    </RelativeLayout>


</RelativeLayout>